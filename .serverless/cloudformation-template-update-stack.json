        "Handler": "functions/sendMessage.handler",
        "Runtime": "nodejs18.x",
        "FunctionName": "tdean-serverless-websockets-example-test-sendMessage",
        "MemorySize": 256,
        "Timeout": 15,
        "Environment": {
          "Variables": {
            "WEBSOCKETS_API_DOMAIN": {
