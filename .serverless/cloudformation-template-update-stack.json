    "DisconnectLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/tdean-serverless-websockets-example/test/1690462374431-2023-07-27T12:52:54.431Z/tdean-serverless-websockets-example.zip"
        },
        "Handler": "functions/disconnect.handler",
        "Runtime": "nodejs18.x",
        "FunctionName": "tdean-serverless-websockets-example-test-disconnect",
        "MemorySize": 256,
        "Timeout": 15,
